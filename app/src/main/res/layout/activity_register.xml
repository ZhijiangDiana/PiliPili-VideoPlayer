<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterActivity">

    <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/register_nickname"
            android:layout_below="@id/register_userName"
            android:hint="请设置昵称"
            android:password="true"
            app:layout_constraintHeight_default="wrap"
            app:layout_constraintWidth_default="spread"
            app:layout_constraintTop_toTopOf="@+id/guideline2" app:layout_constraintStart_toStartOf="@+id/vline0"
            app:layout_constraintEnd_toStartOf="@+id/vline1" app:layout_constraintBottom_toTopOf="@+id/guideline3"/>
    <TextView
            android:text="昵称"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@+id/guideline2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/vline0" app:layout_constraintBottom_toTopOf="@+id/guideline3"/>
    <TextView
            android:text="确认密码"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@+id/guideline" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/vline0" app:layout_constraintBottom_toTopOf="@+id/guideline2"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="488dp" android:id="@+id/guideline3"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/register_password1"
            android:layout_below="@id/register_userName"
            android:hint="请输入密码"
            android:password="true"
            app:layout_constraintHeight_default="wrap"
            app:layout_constraintWidth_default="spread"
            app:layout_constraintStart_toStartOf="@+id/vline0"
            app:layout_constraintEnd_toStartOf="@+id/vline1" app:layout_constraintBottom_toTopOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@+id/hline1"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/register_password2"
            android:layout_below="@id/register_userName"
            android:hint="请确认密码"
            android:password="true"
            app:layout_constraintHeight_default="wrap"
            app:layout_constraintWidth_default="spread"
            app:layout_constraintTop_toTopOf="@+id/guideline" app:layout_constraintStart_toStartOf="@+id/vline0"
            app:layout_constraintEnd_toStartOf="@+id/vline1" app:layout_constraintBottom_toTopOf="@+id/guideline2"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.181"/>
    <TextView
            android:text="密码"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/vline0" app:layout_constraintTop_toTopOf="@+id/hline1"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toTopOf="@+id/guideline"/>

    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="注册界面"
            app:titleTextColor="@color/white"
            android:background="@color/purple"
            android:id="@+id/register_toolbar" tools:layout_editor_absoluteY="-3dp" tools:layout_editor_absoluteX="0dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请注册"
            android:textSize="50sp"
            app:layout_constraintTop_toBottomOf="@id/register_toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/hline0" android:id="@+id/register_title"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/register_userName"
            android:hint="请输入账号"
            app:layout_constraintTop_toBottomOf="@id/hline0"
            app:layout_constraintEnd_toEndOf="@id/vline1"
            app:layout_constraintStart_toStartOf="@id/vline0"
            app:layout_constraintBottom_toBottomOf="@id/hline2"
            app:layout_constraintHeight_default="wrap"
            app:layout_constraintWidth_default="spread"/>


    <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/register_email"
            android:layout_below="@id/register_userName"
            android:hint="请输入邮箱"
            android:password="true"
            app:layout_constraintTop_toBottomOf="@id/hline2"
            app:layout_constraintEnd_toEndOf="@id/vline1"
            app:layout_constraintStart_toStartOf="@id/vline0"
            app:layout_constraintBottom_toBottomOf="@id/hline1"
            app:layout_constraintHeight_default="wrap"
            app:layout_constraintWidth_default="spread" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.526"/>

    <androidx.constraintlayout.widget.Guideline
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hline0"
        app:layout_constraintGuide_begin="166dp"/>


    <androidx.constraintlayout.widget.Guideline
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hline1"
        app:layout_constraintGuide_begin="298dp"/>

    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="539dp"
            android:id="@+id/hline3"/>

    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="109dp"
            android:id="@+id/vline0"/>

    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="372dp"
            android:id="@+id/vline1"/>

    <androidx.constraintlayout.widget.Guideline
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hline2"
        app:layout_constraintGuide_begin="232dp"/>

    <TextView
            android:text="账号"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/register_userName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/hline0"
            app:layout_constraintBottom_toTopOf="@+id/hline2"/>

    <TextView
            android:text="邮箱"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@+id/hline2"
            app:layout_constraintEnd_toStartOf="@+id/register_email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/hline1"/>


    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="202dp"
            android:id="@+id/guideline5"/>

    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="600dp"
            android:id="@+id/guideline7"/>

    <Button
            android:text="注册"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/hline3"
            app:layout_constraintBottom_toTopOf="@+id/guideline7"
            android:onClick="Register"
            app:layout_constraintVertical_bias="0.444" android:layout_marginStart="160dp"
            android:id="@+id/register_registerButton"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="695dp"
            android:id="@+id/guideline8"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="@+id/guideline7"
            app:layout_constraintBottom_toTopOf="@+id/guideline8"
            app:layout_constraintStart_toStartOf="parent">

        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/register_userAgreementCheckBox"
                android:text="我已阅读并同意"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户协议"
                android:textSize="15sp"
                android:onClick="PopupAgreement" android:id="@+id/register_userAgreement"/>




</LinearLayout>
    <androidx.constraintlayout.widget.Barrier
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="top"/>

    <androidx.constraintlayout.widget.Guideline
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="366dp"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="420dp" android:id="@+id/guideline2"/>


</androidx.constraintlayout.widget.ConstraintLayout>